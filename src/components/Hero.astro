---
import Code from "./Code.astro";
---

<section
    id="hero"
    class="flex w-10/12 h-[93vh] mx-auto flex-col-reverse justify-center lg:justify-between lg:flex-row items-center mb-[2%]"
>
    <div id="hero-titles" class="pt-6 lg:pt-0">
        <h1
            class="lg:text-[52px] text-[40px] text-center lg:text-left leading-[50px] lg:leading-[62px] font-bold text-transparent bg-clip-text bg-gradient-to-r to-[#881A8A] from-[#563AFF]"
        >
            Álvaro González
        </h1>
        <h2
            class="lg:text-[30px] text-[24px] text-center lg:text-left leading-none font-semibold"
        >
            Fullstack Developer
        </h2>

        <div
            id="buttons"
            class="pt-4 flex gap-3 lg:justify-start justify-center"
        >
            <a
                href="#about-me"
                class="border-[3.5px] leading-none py-2 px-4 font-medium rounded-full border-[#3820CA] hover:bg-[#3820CA] hover:text-white transition-all duration-250 ease-in-out"
                >About me</a
            >
            <a
                href="#projects"
                class="border-[3.5px] leading-none py-2 px-4 font-medium rounded-full border-[#3820CA] hover:bg-[#3820CA] hover:text-white transition-all duration-250 ease-in-out"
                >Projects</a
            >
        </div>
    </div>
    <Code />
</section>